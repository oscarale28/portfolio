---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
---

<Section text="Educación" href="education">
  {
    education.map(({ institution, degree, startDate, endDate, achievements }) => (
      <div class="mb-10">
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
          {institution}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {degree}
          </h4>
          <span class="pb-[2px] text-sm text-white/70">
            {startDate} — {endDate}
          </span>
        </div>
        <ul class="list-none">
          {achievements.map((achievement) => (
            <li class="relative mb-3 pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
              {achievement}
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</Section>

