---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

interface Props extends AboutProps, Pick<HeroProps, "name"> {
  sectionTitle: string;
}

const { description, image, name, sectionTitle } = Astro.props;
---

<Section text={sectionTitle} href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base md:pr-5 text-theme-secondary">{description}</p>
    <div
      class="h-80 w-64 flex-shrink-0 rotate-[5deg] bg-white p-4 md:rotate-[7deg]"
    >
      <Image
        class="object-cover"
        src={image}
        width="260"
        height="260"
        alt={name}
      />
    </div>
  </div>
</Section>
